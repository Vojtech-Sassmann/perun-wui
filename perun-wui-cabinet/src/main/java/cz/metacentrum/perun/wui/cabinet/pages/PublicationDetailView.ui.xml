<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
			 xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
			 xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
			 xmlns:b.html='urn:import:org.gwtbootstrap3.client.ui.html'
			 xmlns:p='urn:import:cz.metacentrum.perun.wui.widgets'
>

	<ui:with field="res" type="cz.metacentrum.perun.wui.cabinet.client.resources.PerunCabinetResources"/>

	<b.html:Div>
		<b:Heading size="H2" ui:field="pageTitle">
			<b:Container>
				<b:Row>
					<b:Column size="MD_9">
						<b:Button ui:field="backButton" addStyleNames="{res.gss.margin}"/>
						<b.html:Text text="" ui:field="pageName"/>
						<b.html:Small text="" ui:field="userName" />
					</b:Column>
				</b:Row>
				<b:Row>
					<b:Column size="MD_9">
						<b:Alert type="WARNING" addStyleNames="{res.gss.pubDetailAlert}" ui:field="alert">
							<b.html:Strong ui:field="alertStrong"/>
							<b.html:Text ui:field="alertText"/>
						</b:Alert>
						<b:Button ui:field="saveButton" addStyleNames="{res.gss.margin}"/>
					</b:Column>
				</b:Row>
			</b:Container>
		</b:Heading>


		<b.html:Div ui:field="page" paddingTop="20">

			<b:Container>
				<b:Row addStyleNames="{res.gss.detailRow}">
					<b:Column size="MD_5">
						<b:Row>
							<b:Column size="MD_2">
								<b.html:Strong ui:field="titleLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b:TextArea ui:field="titleTextArea" addStyleNames="{res.gss.detailTextArea}"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="authorsLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b.html:Text ui:field="authorsText"/>
								<b:Button ui:field="removeAuthorButton" addStyleNames="{res.gss.squareButton}" type="DANGER" icon="TRASH"/>
								<b:Button ui:field="addAuthorButton" addStyleNames="{res.gss.squareButton}" type="SUCCESS" icon="PLUS"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="yearLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b2:DatePicker ui:field="yearPicker" />
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="ISBNLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b:TextBox ui:field="ISBNTextBox" placeholder="N/A"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="ISSNLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b:TextBox ui:field="ISSNTextBox" placeholder="N/A"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="DOILabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b:TextBox ui:field="DOITextBox" placeholder="N/A"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="thanksLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b.html:Text ui:field="thanksText"/>
								<b:Button ui:field="removeThanksButton" addStyleNames="{res.gss.squareButton}" type="DANGER" icon="TRASH"/>
								<b:Button ui:field="addThanksButton" addStyleNames="{res.gss.squareButton}" type="SUCCESS" icon="PLUS"/>
							</b:Column>
						</b:Row>
						<b:Row addStyleNames="{res.gss.detailRow}">
							<b:Column size="MD_2">
								<b.html:Strong ui:field="citationLabel"/>
							</b:Column>
							<b:Column size="MD_10">
								<b:TextArea ui:field="citeTextArea" addStyleNames="{res.gss.detailTextArea}"/>
							</b:Column>
						</b:Row>
					</b:Column>
					<b:Column size="MD_4">
					</b:Column>
				</b:Row>
			</b:Container>


		</b.html:Div>

		<p:PerunLoader visible="false" ui:field="loader" />

	</b.html:Div>

</ui:UiBinder>